<%= form_for(@song) do |f| %>
  <%= render :partial => 'general/errors', :locals => { :model => @song } %>

  <h2><%= t('activerecord.attributes.song.basic_information')%></h2>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :introduction %>
    <%= f.text_area :introduction %>
  </div>
  <div class="field">
    <%= f.label :melody %>
    <%= f.text_field :melody %>
  </div>
  <div class="field">
    <%= f.label :lyrics_author %>
    <%= f.text_field :lyrics_author %>
  </div>
    <div class="field">
    <%= f.label :songbook_number %>
    <%= f.text_field :songbook_number %>
  </div>
  <div class="field">
    <%= f.label :keywords %>
    <%= f.text_area :keywords %>
  </div>
    <div class="field">
    <h2><%= f.label :lyrics %></h2>
    <%= f.text_area :lyrics %>
  </div>
  <div class="field">
   <h2> <%= f.label :extra_lyrics %></h2>
    <%= f.text_area :extra_lyrics %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
