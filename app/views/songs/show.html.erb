<div>
  <h1><%= @song.name %></h1>
<%= link_to t('actions.edit'), edit_song_path(@song) %> |
<%= link_to t('actions.destroy'), @song, confirm: t('songs.confirm_destroy'), method: :delete %>
</div>

<div id ='columns'>
<div id="song">
<p>
  <%= simple_format @song.lyrics %>
</p>

<p>
  <b><%= t('activerecord.attributes.song.extra_lyrics')%>:</b>
  <% if(@song.extra_lyrics.length > 0) %>
    <%= simple_format @song.extra_lyrics %>
  <% else %>
    <div class="empty">Ei lisäsäkeistöjä</div>
  <% end %>
</p>

<%= link_to t('actions.back'), songs_path %>
</div>

<div id="information">
<p>
  <b><%= t('activerecord.attributes.song.introduction')%>:</b>
  <%= @song.introduction %>
</p>

<p>
  <b><%= t('activerecord.attributes.song.melody')%>:</b>
  <%= @song.melody %>
</p>

<p>
  <b><%= t('activerecord.attributes.song.lyrics_author')%>:</b>
  <%= @song.lyrics_author %>
</p>

<p>
  <b><%= t('activerecord.attributes.song.songbook_number')%>:</b>
  <%= @song.songbook_number %>
</p>

<p>
  <b><%= t('activerecord.attributes.song.keywords')%>:</b>
  <%= @song.keywords %>
</p>
</div>
</div>
